{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": true,
    "automergeType": "pr"
  },
  "prConcurrentLimit": 20,
  "prCreation": "immediate"
}
